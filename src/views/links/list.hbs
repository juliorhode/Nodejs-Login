<div class="container p-4">
    <div class="row">
        {{!-- aqui recorremos los enlaces guardados en bbdd --}}
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    {{!-- timeago es la funcion y created es el nombre del campo de bbdd --}}
                    <p>{{timeago created}}</p>
                    <div class="col-md-12">
                        <a href="/links/eliminar/{{id}}" class="btn btn-danger col-md-5">Eliminar</a>
                        <a href="/links/editar/{{id}}" class="btn btn-secondary col-md-5">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No hay enlaces guardados aun</p>
                        <a href="/links/add">Crear enlace</a>
                    </div>
                </div>
        {{/each}}
    </div>
</div>
{{!-- Este es el formulario de edit --}}
<div class="container p-4">
    <div class="row">
        {{!-- mx-autocentra el contenido --}}
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/editar/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="titulo" autofocus value="{{link.title}}">
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="URL" value="{{link.url}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripccion" >{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>